<% flash.each do |type, msg| %>
  <% if type == 'error' %>
    <div class="alert alert-danger">
      <button class="close" data-dismiss="alert">×</button>
      <%= msg %>
    </div>
  <% elsif type == 'success' %>
    <div class="alert alert-success">
      <button class="close" data-dismiss="alert">×</button>
      <%= msg %>
    </div>
  <% else %>
    <div class="alert alert-primary">
      <button class="close" data-dismiss="alert">×</button>
      <%= msg %>
    </div>
  <% end %>
<% end %>