  <body>
    <main class="home-page">
      <header class="home-pg-header">
        <div class="menu">
          <div class="left-menu-button">
            <div class="line"></div>
            <div class="line"></div>
            <div class="line"></div>
          </div>
          <div class="left-menu">
            <div class="top_box">
              <a href="users/edit" class="lm-i">
                <div class="logo"></div>
                <p class="lm-p">My Account</p>
              </a>
              <a href="#" class="lm-i">
                <p class="lm-p">Settings</p>
              </a>
              <a href="rooms" class="lm-i">
                <p class="lm-p">Chat</p>
              </a>
              <a href="tweets/new" class="lm-i">
                <p class="lm-p">Create New Tweet</p>
              </a>
             <a href="tweets" class="lm-i">
                <p class="lm-p">Show my Tweets</p>
              </a> 
            </div>
            <div class="bottom_box">
              <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
            </div>
        </div>
      </header>
      <div class="content">
        <div class="main_block">
                <% @tweets.each do |tweet| %>
                  <div class="post_content">
                    <div class="sub_box">
                    <p><%= tweet.subject %></p>
                    </div>
                    <div class="con_box">
                      <p><%= tweet.tweet_content %></p>
                    </div>
                    <div class="bottom_box">
                      <div class="like_box">
                      <%= link_to "I like it", like_tweet_path(tweet), method: :put, class: "like" %><span>(<%= tweet.get_upvotes.size %>)</span>
                      <%= link_to "I hate it", dislike_tweet_path(tweet), method: :put, class: "like" %><span>(<%= tweet.get_downvotes.size %>)</span>
                     </div>
                      <div class="time_box">
                      <p><%= tweet.created_at %></p>
                    </div>
                     </div>
                  </div>
                <% end %>
              
      </div>
      </div>
